<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address_edit_id_textView"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_id_label" />

        <TextView
            android:id="@+id/address_show_fullName_textView"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_show_fullName_text"
            android:text="@string/address_show_fullName_text" />

        <TextView
            android:id="@+id/address_show_company_textView"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_show_company_text"
            android:text="@string/address_show_company_text" />

        <TextView
            android:id="@+id/address_show_streetAddress_textView"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_show_streetAddress_text"
            android:text="@string/address_show_streetAddress_text" />

        <TextView
            android:id="@+id/address_show_cityStateAndZip_textView"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_show_cityStateAndZip_text"
            android:text="@string/address_show_cityStateAndZip_text" />

        <Button
            android:id="@+id/edit_address_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/edit_address_button"
            android:layout_margin="@dimen/edit_margin"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingRight="40dp">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:visibility="visible"
            />
    </RelativeLayout>
</RelativeLayout>